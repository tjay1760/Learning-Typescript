{
  "compilerOptions": {
    "target": "esnext", // Or "es6", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"
    "lib": ["es2015", "dom"], // Include ES2015 features and DOM types if you're targeting a browser
    "module": "commonjs", // CommonJS is typical for Node.js environments
    "strict": true,       // Enable all strict type-checking options (highly recommended)
    "esModuleInterop": true, // Recommended for better module interoperability
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "outDir": "./dist",   // Output compiled JS files to a 'dist' directory
    "rootDir": "./"       // Look for source files in the current directory
  },
  "include": [
    "index.ts" // Specify which files to include for compilation
  ]
}